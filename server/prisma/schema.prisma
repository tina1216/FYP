generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model RefreshToken {
  id          String   @id @unique @default(uuid())
  hashedToken String
  id_user     String
  User        User     @relation(fields: [id_user], references: [id])
  revoked     Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  id           String         @id @default(uuid())
  userId       String         @unique
  password     String
  email        String         @unique
  role         Role           @default(USER)
  RefreshToken RefreshToken[]
  elections    ElectionUser[]
  Otp          Otp[]
  updatedAt    DateTime       @updatedAt
}

// OTP
model Otp {
  id        String   @id @default(uuid())
  id_user   String
  user      User     @relation(fields: [id_user], references: [userId])
  code      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  expiresAt DateTime @db.Timestamp(5)
}

model Election {
  id             String         @id @default(uuid())
  electionName   String
  electionStatus Status         @default(UPCOMING)
  Candidate      Candidate[]
  Vote           Vote[]
  Users          ElectionUser[]
}

// Add a new model for the many-to-many relationship between User and Election
model ElectionUser {
  id          String   @id @default(uuid())
  id_user     String
  id_election String
  user        User     @relation(fields: [id_user], references: [id])
  election    Election @relation(fields: [id_election], references: [id])
  hasVoted    Boolean
}

// a candidate in an election
// related to an election
model Candidate {
  id            String   @id @default(uuid())
  id_election   String
  candidateName String
  detail        String?
  Election      Election @relation(fields: [id_election], references: [id])
}

// a vote by a user
// encrypted vote is candidateId
model Vote {
  id            String   @id @default(uuid())
  id_user       String
  id_election   String
  encryptedVote String
  createdAt     DateTime @default(now())
  Election      Election @relation(fields: [id_election], references: [id])
}

enum Role {
  USER
  ADMIN
}

enum Status {
  ACTIVE
  CLOSED
  UPCOMING
}
